              %i.push-notification
              Push Notification

          %li.button
            %a{href: "#in-app-purchase"}
              %i.in-app-purchase
              In-App Purchase

          %li.button
            %a{href: "#passbook"}
              %i.passbook
              Passbook

          %li.button
            %a{href: "#newsstand"}
